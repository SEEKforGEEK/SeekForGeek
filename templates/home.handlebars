<!--        MODAL:  REGISTER        -->
<div class="modal fade" id="modal-register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="closeRegister" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <img src="../images/logo.png" alt="logo"/>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div id="email-form" class="form-group">
                        <label for="register-email" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="register-email" placeholder="Email">
                        </div>
                    </div>
                    <div id="username-form" class="form-group">
                        <label for="register-username" class="col-sm-2 control-label">Username</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="register-username" placeholder="Pesho">
                        </div>
                    </div>
                    <div id="password-form" class="form-group">
                        <label for="register-pass" class="col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="register-pass" placeholder="Password">
                        </div>
                    </div>
                    <div id="conf-pass-form" class="form-group">
                        <label for="register-conf-pass" class="col-sm-2 control-label">Confirm Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="register-conf-pass" placeholder="Password">
                        </div>
                    </div>
                    <div id="type-form" class="form-group">
                        <form>
                            <div class="col-sm-offset-4 col-sm-8">
                                <label class="checkbox-inline">
                                    <input type="radio" name="type" id="register-hire" value="hire"> Hire
                                </label>
                                <label class="checkbox-inline">
                                    <input type="radio" name="type" id="register-work" value="work"> Work
                                </label>
                            </div>
                        </form>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" id="registerButton" class="btn">Create Account</button>
                        </div>
                        <div class="col-sm-offset-2 col-sm-10">
                            <span>By registering you confirm that you accept the Terms and Conditions and Privacy Policy</span>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="loginInRegister" data-toggle="modal" data-target="#modal-login">Are you have account?</button>
            </div>
        </div>
    </div>
</div>

<!--        MODAL:  LOG IN        -->
