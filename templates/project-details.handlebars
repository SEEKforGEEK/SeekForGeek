<div class="container-fluid contentALL projectDetails">
    <header class="row heading-details">
        <div class="col-md-12 col-xs-12 col-lg-12 col-sm-12">
            <h1 id="project-name"></h1>
            <button id="add-watchlist" alt="Add to watchlist"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></button>
            <h4 id="project-category"></h4>
        </div>
    </header>
    <section class="row main-details">
        <div id="project" class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
            <h3 class="details-heading">Project:</h3>
            <img id="project-picture" class="img-responsive" width="300px" height="300px" src="#" alt="photo"/>
            <p class="infoType">Price: <span id="project-price"></span></p>
            <p class="infoType">Due date: <span id="project-date"></span></p>
        </div>
        <div  id="project-details" class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
            <h3 class="details-heading">Project details:</h3>
            <button class="button" id="download-files"><a id="download-button" href="#">Download files</a></button>
        </div>
        <div id="customer-info-details" class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
            <h3 class="details-heading">Customer Info:</h3>
            <p class="infoType">Name: <span id="customer-name"></span></p>
            <p class="infoType">Email: <span id="customer-email"></span></p>
            <p class="infoType">Phone: <span id="customer-phone"></span></p>
        </div>
    </section>
    <section>
        <div id="customer-submisions">
            <div id="show-winner"></div>
        </div>
    </section>
    <section class="buttons">
        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-16">
            <button id="back-button" class="button">Back to projects</button>
            <button id="geek-add-submit" type="button" class="button btn btn-primary btn-lg" data-toggle="modal" data-target="#add-submit">Add Submit</button>
            <span id="successful-submit"></span>
        </div>
    </section>
    <section id="customer-see-submissions">
        <form id="submission-form">
            <div class="table-responsive">
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>Choose</th>
                            <th>Title</th>
                            <th>Submitted</th>
                            <th>Download</th>
                        </tr>
                    </thead>
                    <tbody id="submissions">
                        <!--APPEND WITH JS-->
                    </tbody>
                </table> 
            </div>
            <button class="button choose-winner">Choose The Winner</button>
        </form>
    </section>
</div>


<!-- Add Submit -->
<div class="modals modal fade" id="add-submit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <header class="modal-header">
                <button type="button" class="close button" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
                <img src="../images/logo.png" class="img-responsive" alt="logo"/>
            </header>
            <section class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="submission" class="col-sm-2 col-lg-2 col-md-2 col-xs-3  control-label">File</label>

                        <div class="col-sm-8 col-md-8 col-lg-8 col-xs-12">
                            <input type="file" class="form-control" id="submission">
                            <span id="restriction">Max 10MB</span>
                        </div>
                    </div>
                </form>
            </section>
            <footer class="modal-footer">
                <button id="upload-submission" class="button" type="button">Upload</button>
            </footer>
        </div>
    </div>
</div>

