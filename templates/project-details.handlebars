<div class="container-fluid contentALL projectDetails">
    <div class="row">
        <div class="col-md-12 col-xs-12 col-lg-12 col-sm-12">
            <h1 id="project-name"></h1>
            <button id="add-watchlist">Add to watchlist</button>
            <h3 id="project-category"></h3>
        </div>
    </div>
    <div class="row">
        <div id="project-details" class="col-md-5 col-xs-7 col-lg-5 col-sm-5">
            <h2>Details</h1>
            <p class="infoType">Price: <span id="project-price"></span></p>
            <p class="infoType">Due date: <span id="project-date"></span></p>
            <button id="back-button" class="button">Back to projects</button>
        </div>
        <div class="col-md-7 col-xs-11 col-lg-7 col-sm-7">
            <h2>Customer Info</h1>
            <p class="infoType">Name: <span id="customer-name"></span></p>
            <p class="infoType">Email: <span id="customer-email"></span></p>
            <p class="infoType">Phone: <span id="customer-phone"></span></p>
        </div>
        <div class="col-md-2 col-md-offset-7 col-xs-4 col-lg-2 col-sm-2">
            <img id="project-picture" class="img-responsive" width="300px" height="300px" src="#" alt="photo"/>
        </div>
    </div>
    <div class="row">
        <div id="customer-submisions" class="col-md-12 col-xs-18 col-lg-12 col-sm-12">
            <div id="show-winner"></div>
        </div>
    </div>
    <div id="geek-add-submit" class="row">
        <div class="col-md-2 col-md-offset-10 col-xs-4 col-lg-2 col-sm-2">
            <button type="button" class="button btn btn-primary btn-lg" data-toggle="modal" data-target="#add-submit">Add Submit</button>
            <span id="successful-submit"></span>
        </div>
    </div>
    <div id="customer-see-submissions" class="row">
        <div class="col-md-12 col-xs-18 col-lg-12 col-sm-12">
            <form id="submission-form">
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>Choose</th>
                            <th>Title</th>
                            <th>Submitter</th>
                            <th>Due date</th>
                            <th>Price</th>
                            <th>Download</th>
                        </tr>
                    </thead>
                    <tbody id="submissions">
                        
                    </tbody>
                </table> 
                <button class="button choose-winner">Choose The Winner</button>
            </form>
        </div>
    </div>
</div>


<!-- Add Submit -->
<div class="modal fade" id="add-submit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close button" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
                <img src="../images/logo.png" class="img-responsive" alt="logo"/>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="submission" class="col-sm-2 col-lg-2 col-md-2 col-xs-3  control-label">File</label>

                        <div class="col-sm-8 col-md-8 col-lg-8 col-xs-12">
                            <input type="file" class="form-control" id="submission">
                            <span id="restriction">Max 10MB</span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="upload-submission" class="button" type="button">Upload</button>
            </div>
        </div>
    </div>
</div>


<script src="../javascript/setup/project-details.js"></script>